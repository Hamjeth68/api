generator client {
  provider = "prisma-client-js"
}

generator anotherClient {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Appointment {
  id             Int     @id @default(autoincrement())
  name           String
  email          String
  date           String
  time           String
  build          String  // Corrected type to String
  whatToBuild    String  
  website        String  
  contactNumber  String   
}

model User {
  id              Int                   @id @default(autoincrement())
  email           String                @unique
  password        String
  firstName       String
  lastName        String
  dob             DateTime
  active          Boolean               @default(false)
  activationCode  Int                   @default(111066)
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  preferences     ShoppingPreference[]
}

model ShoppingPreference {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  users       User[]
}

model PasswordRequest {
  id          Int           @id @default(autoincrement())
  resetKey    String    
  email       String
  createdAt   DateTime      @default(now()) 
}
